<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="sapui5tutorial1.SecondPage" xmlns:layout="sap.ui.commons.layout"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Special Track">
		<content>
			<VBox>
				<Input type="Text" placeholder="Enter User name" />
				<Input type="Text" placeholder="Enter Password" />
				<HBox justifyContent="Center">
					<layout:MatrixLayout id="idMatrixLayout"
						layoutFixed="false">
						<layout:MatrixLayoutRow>
							<layout:MatrixLayoutCell>
								<Button type="Accept" text="Next Page" press="nextPage">
								</Button>
							</layout:MatrixLayoutCell>
							<layout:MatrixLayoutCell>
								<Button type="Reject" text="Cancel" press="goBack">
								</Button>
							</layout:MatrixLayoutCell>
							

						</layout:MatrixLayoutRow>
					</layout:MatrixLayout>
				</HBox>
			</VBox>
		</content>
	</Page>
</core:View>