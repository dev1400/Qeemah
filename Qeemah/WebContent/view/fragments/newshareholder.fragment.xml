<sap.ui.core:FragmentDefinition xmlns="sap.m"
	xmlns:sap.ui.core="sap.ui.core" xmlns:sap.ui.commons.layout="sap.ui.commons.layout"
	xmlns:sap.ui.layout="sap.ui.layout" xmlns:sap.ui.commons="sap.ui.commons"
	xmlns:sap.ui.unified="sap.ui.unified" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

	<ScrollContainer height="40rem" width="69rem" vertical="true">

		<HBox alignItems="Center">
			<Label text="{i18n>SelectShareHolderType}"></Label>
			<RadioButton groupName="NewShareHolderGroup" text="{i18n>Person}" />
			<RadioButton groupName="NewShareHolderGroup" text="{i18n>Organization}" />
		</HBox>


		<VBox alignItems="Center">


			<sap.ui.commons:Accordion id="accordionA"
				openedSectionsId="section1" width="60rem">
				<sap.ui.commons:sections>
					<sap.ui.commons:AccordionSection
						id="idShareHolderDetails" maxHeight="30rem" collapsed="true"
						title="{i18n>ShareHolderDetails}" tooltip="{i18n>ShareHolderDetails}">
						<sap.ui.commons:content>
							<sap.ui.core:Fragment
								fragmentName="com.sagia.view.fragments.ns_shareholderdetails"
								type="XML" />
						</sap.ui.commons:content>
					</sap.ui.commons:AccordionSection>
					<sap.ui.commons:AccordionSection
						id="idNewShareHolderAttachments" maxHeight="17.3rem" collapsed="true"
						title="{i18n>Attachments}" tooltip="{i18n>Attachments}">

						<sap.ui.commons:content>
						
						<sap.ui.core:Fragment
								fragmentName="com.sagia.view.fragments.ns_attachments"
								type="XML" />							

						</sap.ui.commons:content>
					</sap.ui.commons:AccordionSection>
					<sap.ui.commons:AccordionSection
						id="idActivityQuestions" collapsed="true" title="{i18n>ActivityQuestions}">
						<sap.ui.commons:customData>
							<sap.ui.core:CustomData key="sap-ui-fastnavgroup"
								value="true" writeToDom="true"></sap.ui.core:CustomData>
						</sap.ui.commons:customData>
						<sap.ui.commons:content>

						</sap.ui.commons:content>
					</sap.ui.commons:AccordionSection>

					<sap.ui.commons:AccordionSection
						id="idExperienceQuestions" collapsed="true" title="{i18n>ExperienceQuestions}">
						<sap.ui.commons:customData>
							<sap.ui.core:CustomData key="sap-ui-fastnavgroup"
								value="true" writeToDom="true"></sap.ui.core:CustomData>
						</sap.ui.commons:customData>
						<sap.ui.commons:content>

						</sap.ui.commons:content>
					</sap.ui.commons:AccordionSection>
					<sap.ui.commons:AccordionSection
						id="idNewShareholderFinancialQuestions" collapsed="true"
						title="{i18n>FinancialQuestions}">
						<sap.ui.commons:customData>
							<sap.ui.core:CustomData key="sap-ui-fastnavgroup"
								value="true" writeToDom="true"></sap.ui.core:CustomData>
						</sap.ui.commons:customData>
						<sap.ui.commons:content>

						</sap.ui.commons:content>
					</sap.ui.commons:AccordionSection>
				</sap.ui.commons:sections>
			</sap.ui.commons:Accordion>
			<html:br />

			<sap.ui.commons.layout:MatrixLayout
				layoutFixed="false">
				<sap.ui.commons.layout:rows>
					<sap.ui.commons.layout:MatrixLayoutRow>
						<sap.ui.commons.layout:cells>
							<sap.ui.commons.layout:MatrixLayoutCell>
								<sap.ui.commons.layout:content>
									<Table width="60rem">
										<columns>
											<Column width="2em">
												<Text text="#" />
											</Column>
											<Column width="5em">
												<Text text="{i18n>FirstName}" />
											</Column>
											<Column width="5em">
												<Text text="{i18n>LastName}" />
											</Column>
											<Column width="7em">
												<Text text="{i18n>ShareholderType}" />
											</Column>
											<Column width="5em">
												<Text text="{i18n>Percentage}" />
											</Column>
											<Column width="5em">
												<Text text="{i18n>Edit}" />
											</Column>
											<Column width="5em">
												<Text text="{i18n>Delete}" />
											</Column>
										</columns>
										<items>
											<ColumnListItem>
												<cells>
													<Input type="Text" />
													<Input type="Text" />
													<Input type="Text" />
													<Input type="Text" />
													<Input type="Text" />
													<Input type="Text" />
													<Input type="Text" />
												</cells>
											</ColumnListItem>
										</items>
									</Table>
								</sap.ui.commons.layout:content>
							</sap.ui.commons.layout:MatrixLayoutCell>
						</sap.ui.commons.layout:cells>
					</sap.ui.commons.layout:MatrixLayoutRow>
				</sap.ui.commons.layout:rows>
			</sap.ui.commons.layout:MatrixLayout>
		</VBox>


	</ScrollContainer>
</sap.ui.core:FragmentDefinition>

