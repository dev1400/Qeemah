<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:sap.ui.commons.layout="sap.ui.commons.layout"
	xmlns:sap.ui.commons="sap.ui.commons"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<VBox id="idVBoxRegistration" justifyContent="Center" alignItems="Center">
		<items>



			<sap.ui.commons.layout:MatrixLayout
				layoutFixed="false" columns="2">
				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<VBox alignItems="Center">
							<core:HTML content="{i18n>Welcometo}"></core:HTML>
							<core:HTML content="{i18n>SAGIAOnlineServices}"></core:HTML>
						</VBox>

					</sap.ui.commons.layout:MatrixLayoutCell>

				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<VBox alignItems="Center">
							<SegmentedButton selectedButton="idLoginButton">
								<Button text="{i18n>NewRegistration}" id="idNewRegistrationButton"
									style="20em !important" press="handleNewRegistrationButtonPress"/><!-- icon="sap-icon://down" -->
								<Button text="{i18n>Login}" id="idLoginButton" press="handleLoginButtonPress" />

							</SegmentedButton>

						</VBox>

					</sap.ui.commons.layout:MatrixLayoutCell>

				</sap.ui.commons.layout:MatrixLayoutRow>
			</sap.ui.commons.layout:MatrixLayout>






			<sap.ui.commons.layout:MatrixLayout
				layoutFixed="false" columns="2" id="idRegistrationMatrixLayout" visible="false">
				<sap.ui.commons.layout:MatrixLayoutRow>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<Input placeholder="{i18n>EnterFirstName}" type="Text"
							required="true" />
					</sap.ui.commons.layout:MatrixLayoutCell>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<Input placeholder="{i18n>EnterLastName}" type="Text"
							required="true" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>

					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<Input placeholder="{i18n>EnterMobileNumber}" type="Text"
							required="true" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>
				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<Input placeholder="{i18n>EnterEmail}" type="Text" required="true" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>

					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<Input placeholder="{i18n>EnterPassword}" type="Text"
							required="true" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<Input placeholder="{i18n>ReEnterPassword}" type="Text"
							required="true" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2" hAlign="Center">
						<VBox justifyContent="Inherit" alignItems="Stretch" width="100%">
							<Button style="Accept" text="{i18n>Register}"
								press="handleRegisterUserButtonPress" width="100%" class="buttonsBackGround">
							</Button>
						</VBox>

					</sap.ui.commons.layout:MatrixLayoutCell>

				</sap.ui.commons.layout:MatrixLayoutRow>



			</sap.ui.commons.layout:MatrixLayout>
			
			<VBox id="idLoginVBoxLayout" justifyContent="Center" alignItems="Center" width="100%">
			<Input placeholder="{i18n>EnterSignInUsername}" required="true" width="25rem" />
			
			<Input placeholder="{i18n>EnterSignInPassword}" required="true" width="25rem" />
			

			<sap.ui.commons.layout:MatrixLayout
				layoutFixed="false" columns="2"  >
				
				<sap.ui.commons.layout:MatrixLayoutRow>
						<sap.ui.commons.layout:MatrixLayoutCell hAlign="End">
							<Button style="Accept"
								text="{i18n>SignIn}" press="handleSignInButtonPress"></Button>
						</sap.ui.commons.layout:MatrixLayoutCell>

						<sap.ui.commons.layout:MatrixLayoutCell>
							<Button style="Reject" text="{i18n>Cancel}" press="onPress"></Button>
						</sap.ui.commons.layout:MatrixLayoutCell>

				</sap.ui.commons.layout:MatrixLayoutRow>
			</sap.ui.commons.layout:MatrixLayout>
			</VBox>



		</items>
	</VBox>
</core:FragmentDefinition>