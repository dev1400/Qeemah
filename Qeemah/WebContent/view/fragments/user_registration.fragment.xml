<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:sap.ui.commons.layout="sap.ui.commons.layout"
	xmlns:sap.ui.commons="sap.ui.commons"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<VBox id="idVBoxRegistration" justifyContent="Center" alignItems="Center">
		<items>



			<sap.ui.commons.layout:MatrixLayout
				layoutFixed="false">
				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<VBox alignItems="Center">
							<core:HTML content="{i18n>Welcometo}"></core:HTML>
							<core:HTML content="{i18n>SAGIAOnlineServices}"></core:HTML>
							<core:HTML content="{i18n>HomePageMessage}"></core:HTML>
						</VBox>

					</sap.ui.commons.layout:MatrixLayoutCell>

				</sap.ui.commons.layout:MatrixLayoutRow>

				<!-- <sap.ui.commons.layout:MatrixLayoutRow> <sap.ui.commons.layout:MatrixLayoutCell 
					colSpan="2"> <HBox justifyContent="Center"><Button text="{i18n>NewRegistration}" 
					id="idNewRegistrationButton" press="handleNewRegistrationButtonPress" class="RegisterButtonWidth"/> 
					<Button text="{i18n>Login}" id="idLoginButton" class="LoginButtonWidth" press="handleLoginButtonPress" 
					/> </HBox> </sap.ui.commons.layout:MatrixLayoutCell> </sap.ui.commons.layout:MatrixLayoutRow> -->

				<sap.ui.commons.layout:MatrixLayoutRow>
					<!-- <sap.ui.commons.layout:MatrixLayoutCell hAlign="End"> <Button text="{i18n>NewRegistration}" 
						id="idNewRegistrationButton" press="handleNewRegistrationButtonPress" width="11rem" 
						/> </sap.ui.commons.layout:MatrixLayoutCell> <sap.ui.commons.layout:MatrixLayoutCell 
						hAlign="Begin"> <Button text="{i18n>Login}" id="idLoginButton" width="11rem" 
						press="handleLoginButtonPress" /> </sap.ui.commons.layout:MatrixLayoutCell> -->

					<sap.ui.commons.layout:MatrixLayoutCell>
						<VBox alignItems="Center">
							<SegmentedButton selectedButton="idLoginButton">
								<Button class="SegmentedRegisterButtonStyling" width="9.5rem"
									text="{i18n>NewRegistration}" id="idNewRegistrationButton"
									press="handleNewRegistrationButtonPress" />
								<Button class="SegmentedLoginButtonStyling" width="9rem"
									text="{i18n>Login}" id="idLoginButton" press="handleLoginButtonPress" />

							</SegmentedButton>

						</VBox>
					</sap.ui.commons.layout:MatrixLayoutCell>

				</sap.ui.commons.layout:MatrixLayoutRow>
			</sap.ui.commons.layout:MatrixLayout>






			<sap.ui.commons.layout:MatrixLayout
				layoutFixed="false" columns="2" id="idRegistrationMatrixLayout"
				visible="false">


				<sap.ui.commons.layout:MatrixLayoutRow>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<sap.ui.commons:TextView text="*"
							class="redcolortext"></sap.ui.commons:TextView>
						<sap.ui.commons:TextView id="idFirstNameTextView"
							text="{i18n>PleaseEnterFirstName}" class="textcolorwhite"></sap.ui.commons:TextView>

					</sap.ui.commons.layout:MatrixLayoutCell>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<Input type="Text" required="true" id="idFirstNameInputText"
							liveChange="handleFirstNameEntryLive" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>
				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2" vAlign="Middle" hAlign="Center">
						<sap.ui.commons:TextView visible="false"
							id="idRegFirstNameErrorMsg" class="textcolorred"></sap.ui.commons:TextView>
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<sap.ui.commons:TextView text="*"
							class="redcolortext"></sap.ui.commons:TextView>
						<sap.ui.commons:TextView text="{i18n>PleaseEnterLastName}"
							class="textcolorwhite"></sap.ui.commons:TextView>
					</sap.ui.commons.layout:MatrixLayoutCell>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<Input type="Text" required="true" id="idLastNameInputText" liveChange="handleLastNameEntryLive"/>
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>
				
				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2" vAlign="Middle" hAlign="Center">
						<sap.ui.commons:TextView visible="false"
							id="idRegLastNameErrorMsg" class="textcolorred"></sap.ui.commons:TextView>
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>





				<sap.ui.commons.layout:MatrixLayoutRow>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<sap.ui.commons:TextView text="*"
							class="redcolortext"></sap.ui.commons:TextView>
						<sap.ui.commons:TextView text="{i18n>PleaseEnterPassword}"
							class="textcolorwhite"></sap.ui.commons:TextView>
					</sap.ui.commons.layout:MatrixLayoutCell>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<Input type="Password" required="true" id="idInputPassword" liveChange="handlePasswordEntryLive"/>
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>
				
				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2" vAlign="Middle" hAlign="Center">
						<sap.ui.commons:TextView visible="false"
							id="idRegPasswordErrorMsg" class="textcolorred"></sap.ui.commons:TextView>
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<sap.ui.commons:TextView text="*"
							class="redcolortext"></sap.ui.commons:TextView>
						<sap.ui.commons:TextView text="{i18n>PleaseReEnterPassword}"
							class="textcolorwhite"></sap.ui.commons:TextView>
					</sap.ui.commons.layout:MatrixLayoutCell>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<Input type="Password" required="true" id="idInputRePassword" liveChange="handleRePasswordEntryLive" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>
				
				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2" vAlign="Middle" hAlign="Center">
						<sap.ui.commons:TextView visible="false"
							id="idRegRePasswordErrorMsg" class="textcolorred"></sap.ui.commons:TextView>
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<sap.ui.commons:TextView text="*"
							class="redcolortext"></sap.ui.commons:TextView>
						<sap.ui.commons:TextView text="{i18n>PleaseEnterMobileNumber}"
							class="textcolorwhite"></sap.ui.commons:TextView>
					</sap.ui.commons.layout:MatrixLayoutCell>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<Input type="Text" required="true" id="idInputMobileNumber" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<sap.ui.commons:TextView text="*"
							class="redcolortext"></sap.ui.commons:TextView>
						<sap.ui.commons:TextView text="{i18n>PleaseEnterEmail}"
							class="textcolorwhite"></sap.ui.commons:TextView>
					</sap.ui.commons.layout:MatrixLayoutCell>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<Input type="Text" required="true" id="idInputEmail" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>







				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2" hAlign="Center">
						<VBox justifyContent="Inherit" alignItems="Stretch" width="100%">
							<Button style="Accept" text="{i18n>Register}"
								press="handleRegisterUserButtonPress" width="100%" class="buttonsBackGround">
							</Button>
						</VBox>

					</sap.ui.commons.layout:MatrixLayoutCell>

				</sap.ui.commons.layout:MatrixLayoutRow>



			</sap.ui.commons.layout:MatrixLayout>



			<VBox id="idLoginVBoxLayout" justifyContent="Center" alignItems="Center"
				width="100%">

				<sap.ui.commons.layout:MatrixLayout
					layoutFixed="false" columns="2">
					<sap.ui.commons.layout:MatrixLayoutRow>

						<sap.ui.commons.layout:MatrixLayoutCell>
							<sap.ui.commons:TextView text="*"
								class="redcolortext"></sap.ui.commons:TextView>
							<sap.ui.commons:TextView text="{i18n>PleaseEnterInvestorID}"
								class="textcolorwhite"></sap.ui.commons:TextView>
						</sap.ui.commons.layout:MatrixLayoutCell>
						<sap.ui.commons.layout:MatrixLayoutCell>
							<Input id="idSignInUsernameInput" required="true" width="14rem" />
						</sap.ui.commons.layout:MatrixLayoutCell>
					</sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutRow>
						<sap.ui.commons.layout:MatrixLayoutCell>
							<sap.ui.commons:TextView text="*"
								class="redcolortext"></sap.ui.commons:TextView>
							<sap.ui.commons:TextView text="{i18n>PleaseEnterPassword}"
								class="textcolorwhite"></sap.ui.commons:TextView>
						</sap.ui.commons.layout:MatrixLayoutCell>
						<sap.ui.commons.layout:MatrixLayoutCell>
							<Input type="Password" id="idSignInPasswordInput" required="true"
								width="14rem" />
						</sap.ui.commons.layout:MatrixLayoutCell>
					</sap.ui.commons.layout:MatrixLayoutRow>
				</sap.ui.commons.layout:MatrixLayout>






				<sap.ui.commons.layout:MatrixLayout
					layoutFixed="false" columns="2">

					<sap.ui.commons.layout:MatrixLayoutRow>
						<sap.ui.commons.layout:MatrixLayoutCell
							hAlign="End">
							<Button style="Accept" text="{i18n>SignIn}" press="handleSignInButtonPress"></Button>
						</sap.ui.commons.layout:MatrixLayoutCell>

						<sap.ui.commons.layout:MatrixLayoutCell>
							<Button style="Reject" text="{i18n>Cancel}" press="handleCancelButtonPress"></Button>
						</sap.ui.commons.layout:MatrixLayoutCell>

					</sap.ui.commons.layout:MatrixLayoutRow>
				</sap.ui.commons.layout:MatrixLayout>
			</VBox>





		</items>
	</VBox>
</core:FragmentDefinition>