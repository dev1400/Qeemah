<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:sap.ui.commons.layout="sap.ui.commons.layout"
	xmlns:sap.ui.commons="sap.ui.commons"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:html="http://www.w3.org/1999/xhtml">
	
	<VBox id="idVBoxRegistration" justifyContent="Center" alignItems="Center">
		<items>



			<sap.ui.commons.layout:MatrixLayout
				layoutFixed="false" columns="2" >
				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<VBox alignItems="Center">
							<core:HTML content="{i18n>Welcometo}"></core:HTML>
							<core:HTML content="{i18n>SAGIAOnlineServices}"></core:HTML>
						</VBox>

					</sap.ui.commons.layout:MatrixLayoutCell>

				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<VBox justifyContent="Inherit" alignItems="Stretch">
							<SegmentedButton selectedButton="idGetStarted"
								width="100%">
								<Button text="{i18n>NewRegistration}" id="idGetStarted" icon="sap-icon://down"/>
								<Button text="{i18n>Login}"  icon="sap-icon://down"/>

							</SegmentedButton>

						</VBox>

					</sap.ui.commons.layout:MatrixLayoutCell>

				</sap.ui.commons.layout:MatrixLayoutRow>








				<sap.ui.commons.layout:MatrixLayoutRow>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<Input placeholder="{i18n>EnterFirstName}" type="Text"
							required="true" />
					</sap.ui.commons.layout:MatrixLayoutCell>

					<sap.ui.commons.layout:MatrixLayoutCell>
						<Input placeholder="{i18n>EnterLastName}" type="Text"
							required="true" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>

					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<Input placeholder="{i18n>EnterMobileNumber}" type="Text"
							required="true" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>
				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<Input placeholder="{i18n>EnterEmail}" type="Text" required="true" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>

					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<Input placeholder="{i18n>EnterPassword}" type="Text"
							required="true" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2">
						<Input placeholder="{i18n>ReEnterPassword}" type="Text"
							required="true" />
					</sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutRow>

				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:MatrixLayoutCell
						colSpan="2" hAlign="Center">
						<VBox justifyContent="Inherit" alignItems="Stretch" width="100%">
							<Button style="Accept" text="{i18n>Register}"
								press="handleRegisterUserButtonPress" width="100%" class="buttonsBackGround">
							</Button>
						</VBox>

					</sap.ui.commons.layout:MatrixLayoutCell>

				</sap.ui.commons.layout:MatrixLayoutRow>



			</sap.ui.commons.layout:MatrixLayout>

			

		</items>
	</VBox>
</core:FragmentDefinition>