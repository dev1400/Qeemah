<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:sap.ui.commons="sap.ui.commons" xmlns:sap.ui.core="sap.ui.core"
	xmlns:sap.ui.commons.layout="sap.ui.commons.layout"
	xmlns:sap.ui.core.mvc="sap.ui.core.mvc" xmlns:sap.ui.unified="sap.ui.unified">
	
	<ScrollContainer
    height="43rem"
    width="70rem"
    vertical="true" >
	<VBox  id="idShareHoldersContentVBox" class="HeadingBGVBOX ShareHoldesParentVBox"
		>
		<IconTabBar
    class="iconTabBarPaddingTop IconTabBarHeadingBGCOlor"
    expanded="true" expandable="false">
    <items>
      <IconTabFilter
        text="{i18n>ExistingShareHolder}">
        			<sap.ui.commons.layout:MatrixLayout
			layoutFixed="false">
			<sap.ui.commons.layout:rows>

				<sap.ui.commons.layout:MatrixLayoutRow>
					<sap.ui.commons.layout:cells>
						<sap.ui.commons.layout:MatrixLayoutCell
							vAlign="Middle">
							<sap.ui.commons.layout:content>
								<Label text="{i18n>ShareHolderCompletion}"></Label>
							</sap.ui.commons.layout:content>
						</sap.ui.commons.layout:MatrixLayoutCell>
						<sap.ui.commons.layout:MatrixLayoutCell
							vAlign="Middle">
							<sap.ui.commons.layout:content>
								<ProgressIndicator width="10rem" percentValue="50"
									showValue="true" state="Warning" />
							</sap.ui.commons.layout:content>
						</sap.ui.commons.layout:MatrixLayoutCell>
					</sap.ui.commons.layout:cells>
				</sap.ui.commons.layout:MatrixLayoutRow>
			</sap.ui.commons.layout:rows>
		</sap.ui.commons.layout:MatrixLayout>
					
					
						<VBox justifyContent="Center" alignItems="Center">

							<sap.ui.commons.layout:MatrixLayout
								layoutFixed="false" columns="5">
								<sap.ui.commons.layout:rows>

									<sap.ui.commons.layout:MatrixLayoutRow>
										<sap.ui.commons.layout:cells>
											<sap.ui.commons.layout:MatrixLayoutCell
												colSpan="2">
												<sap.ui.commons.layout:content>
													<Label text="{i18n>EnterShareholderEntityNo}"></Label>
												</sap.ui.commons.layout:content>
											</sap.ui.commons.layout:MatrixLayoutCell>
											<sap.ui.commons.layout:MatrixLayoutCell>
												<sap.ui.commons.layout:content>
													<Label text="{i18n>Name}"></Label>
												</sap.ui.commons.layout:content>
											</sap.ui.commons.layout:MatrixLayoutCell>
											<sap.ui.commons.layout:MatrixLayoutCell
												colSpan="2">
												<sap.ui.commons.layout:content>
													<Label text="{i18n>Percentage}"></Label>
												</sap.ui.commons.layout:content>
											</sap.ui.commons.layout:MatrixLayoutCell>
										</sap.ui.commons.layout:cells>
									</sap.ui.commons.layout:MatrixLayoutRow>

									<sap.ui.commons.layout:MatrixLayoutRow>
										<sap.ui.commons.layout:cells>
											<sap.ui.commons.layout:MatrixLayoutCell
												vAlign="Top">
												<sap.ui.commons.layout:content>
													<Input type="Text"></Input>
												</sap.ui.commons.layout:content>
											</sap.ui.commons.layout:MatrixLayoutCell>

											<sap.ui.commons.layout:MatrixLayoutCell
												vAlign="Top">
												<sap.ui.commons.layout:content>
													<Button text="{i18n>Validate}"></Button>
												</sap.ui.commons.layout:content>
											</sap.ui.commons.layout:MatrixLayoutCell>

											<sap.ui.commons.layout:MatrixLayoutCell>
												<sap.ui.commons.layout:content>
													<Input type="Text"></Input>
												</sap.ui.commons.layout:content>
											</sap.ui.commons.layout:MatrixLayoutCell>

											<sap.ui.commons.layout:MatrixLayoutCell>
												<sap.ui.commons.layout:content>
													<Input type="Text"></Input>
												</sap.ui.commons.layout:content>
											</sap.ui.commons.layout:MatrixLayoutCell>

											<sap.ui.commons.layout:MatrixLayoutCell
												vAlign="Top">
												<sap.ui.commons.layout:content>
													<Button text="{i18n>Add}"></Button>
												</sap.ui.commons.layout:content>
											</sap.ui.commons.layout:MatrixLayoutCell>
										</sap.ui.commons.layout:cells>
									</sap.ui.commons.layout:MatrixLayoutRow>

								</sap.ui.commons.layout:rows>
							</sap.ui.commons.layout:MatrixLayout>
						</VBox>


						<VBox alignItems="Center">

							<sap.ui.commons.layout:MatrixLayout
								layoutFixed="false">
								<sap.ui.commons.layout:rows>


									<sap.ui.commons.layout:MatrixLayoutRow>
										<sap.ui.commons.layout:cells>
											<sap.ui.commons.layout:MatrixLayoutCell
												colSpan="2">
												<sap.ui.commons.layout:content>
													<Table width="60em">
														<columns>
															<Column width="2em">
																<Text text="#" />
															</Column>
															<Column width="5em">
																<Text text="{i18n>ShareholderEntityNo}" />
															</Column>
															<Column width="5em">
																<Text text="{i18n>ShareHolderName}" />
															</Column>
															<Column width="5em">
																<Text text="{i18n>Percentage}" />
															</Column>
															<Column width="5em">
																<Text text="{i18n>Delete}" />
															</Column>
														</columns>
														<items>
															<ColumnListItem>
																<cells>
																	<Input type="Text" />
																	<Input type="Text" />
																	<Input type="Text" />
																	<Input type="Text" />
																	<Input type="Text" />
																</cells>
															</ColumnListItem>
														</items>
													</Table>
												</sap.ui.commons.layout:content>
											</sap.ui.commons.layout:MatrixLayoutCell>
										</sap.ui.commons.layout:cells>
									</sap.ui.commons.layout:MatrixLayoutRow>
								</sap.ui.commons.layout:rows>
							</sap.ui.commons.layout:MatrixLayout>

						</VBox>
      </IconTabFilter>
      <IconTabFilter
        text="{i18n>NewShareHolder}">
        <VBox alignItems="Center">
							<sap.ui.commons.layout:MatrixLayout
								layoutFixed="false">
								<sap.ui.commons.layout:rows>
									<sap.ui.commons.layout:MatrixLayoutRow>
										<sap.ui.commons.layout:cells>
											<sap.ui.commons.layout:MatrixLayoutCell>
												<sap.ui.commons.layout:content>
													<Table width="60em">
														<columns>
															<Column width="2em">
																<Text text="#" />
															</Column>
															<Column width="5em">
																<Text text="{i18n>FirstName}" />
															</Column>
															<Column width="5em">
																<Text text="{i18n>LastName}" />
															</Column>
															<Column width="5em">
																<Text text="{i18n>ShareholderType}" />
															</Column>
															<Column width="5em">
																<Text text="{i18n>Percentage}" />
															</Column>
															<Column width="5em">
																<Text text="{i18n>Edit}" />
															</Column>
															<Column width="5em">
																<Text text="{i18n>Delete}" />
															</Column>
														</columns>
														<items>
															<ColumnListItem>
																<cells>
																	<Input type="Text" />
																	<Input type="Text" />
																	<Input type="Text" />
																	<Input type="Text" />
																	<Input type="Text" />
																	<Input type="Text" />
																	<Input type="Text" />
																</cells>
															</ColumnListItem>
														</items>
													</Table>

													<!-- New Share holders tab start -->

													<sap.ui.commons:TabStrip>
														<sap.ui.commons:tabs>
															<!-- Person tab start -->
															<sap.ui.commons:Tab id="idNewShareHolderPersonCreationTab"
																text="{i18n>Person}" tooltip="{i18n>Person}">
																<sap.ui.commons:content>



																	<!-- Person sub tabs start -->
																	<sap.ui.commons:TabStrip>
																		<sap.ui.commons:tabs>
																			<sap.ui.commons:Tab
																				id="idNewShareHolderPersonCreationSubTab1" text="{i18n>ShareHolderDetails}"
																				tooltip="{i18n>ShareHolderDetails}">
																				<sap.ui.commons:content>
																					<sap.ui.commons.layout:MatrixLayout
																						layoutFixed="false" columns="3">
																						<sap.ui.commons.layout:rows>
																							<sap.ui.commons.layout:MatrixLayoutRow>
																								<sap.ui.commons.layout:cells>
																									<sap.ui.commons.layout:MatrixLayoutCell
																										colSpan="4">
																										<sap.ui.commons.layout:content>
																											<core:HTML content="{i18n>AddNewPersonasShareHolder}">
																											</core:HTML>
																										</sap.ui.commons.layout:content>
																									</sap.ui.commons.layout:MatrixLayoutCell>
																								</sap.ui.commons.layout:cells>
																							</sap.ui.commons.layout:MatrixLayoutRow>

																							<sap.ui.commons.layout:MatrixLayoutRow>
																								<sap.ui.commons.layout:cells>
																									<sap.ui.commons.layout:MatrixLayoutCell>
																										<sap.ui.commons.layout:content>
																											<Input type="Text" placeholder="{i18n>FirstName}" />
																										</sap.ui.commons.layout:content>
																									</sap.ui.commons.layout:MatrixLayoutCell>
																								</sap.ui.commons.layout:cells>
																							</sap.ui.commons.layout:MatrixLayoutRow>
																						</sap.ui.commons.layout:rows>
																					</sap.ui.commons.layout:MatrixLayout>




																				</sap.ui.commons:content>
																			</sap.ui.commons:Tab>
																			<sap.ui.commons:Tab
																				id="idNewShareHolderPersonCreationSubTab2" text="{i18n>Attachments}"
																				tooltip="{i18n>Attachments}">
																				<sap.ui.commons:content>
																				</sap.ui.commons:content>
																			</sap.ui.commons:Tab>
																			<sap.ui.commons:Tab
																				id="idNewShareHolderPersonCreationSubTab3" text="{i18n>ActivityQuestions}"
																				tooltip="{i18n>ActivityQuestions}">
																				<sap.ui.commons:content>
																				</sap.ui.commons:content>
																			</sap.ui.commons:Tab>
																			<sap.ui.commons:Tab
																				id="idNewShareHolderPersonCreationSubTab4" text="{i18n>ExperienceQuestions}"
																				tooltip="{i18n>ExperienceQuestions}">
																				<sap.ui.commons:content>
																				</sap.ui.commons:content>
																			</sap.ui.commons:Tab>

																			<sap.ui.commons:Tab
																				id="idNewShareHolderPersonCreationSubTab5" text="{i18n>FinancialQuestions}"
																				tooltip="{i18n>FinancialQuestions}">
																				<sap.ui.commons:content>
																				</sap.ui.commons:content>
																			</sap.ui.commons:Tab>
																		</sap.ui.commons:tabs>
																	</sap.ui.commons:TabStrip>

																	<!-- Person sub tabs end -->


																</sap.ui.commons:content>
															</sap.ui.commons:Tab>
															<!-- Person tab end -->

															<!-- Organization tab start -->
															<sap.ui.commons:Tab
																id="idNewShareHolderOrganizationCreationTab" text="{i18n>Organization}"
																tooltip="{i18n>Organization}">
																<sap.ui.commons:content>
																</sap.ui.commons:content>
															</sap.ui.commons:Tab>
															<!-- Organization tab start -->
														</sap.ui.commons:tabs>
													</sap.ui.commons:TabStrip>
													<!-- New share holders tab end -->

												</sap.ui.commons.layout:content>
											</sap.ui.commons.layout:MatrixLayoutCell>
										</sap.ui.commons.layout:cells>
									</sap.ui.commons.layout:MatrixLayoutRow>
								</sap.ui.commons.layout:rows>
							</sap.ui.commons.layout:MatrixLayout>
						</VBox>
      </IconTabFilter>
    </items>
  </IconTabBar>
	</VBox>
	</ScrollContainer>
</core:FragmentDefinition>