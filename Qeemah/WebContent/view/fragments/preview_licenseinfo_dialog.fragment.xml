<sap.ui.core:FragmentDefinition xmlns="sap.m"
	xmlns:sap.ui.core="sap.ui.core" xmlns:sap.ui.commons.layout="sap.ui.commons.layout"
	xmlns:sap.ui.layout="sap.ui.layout" xmlns:sap.ui.commons="sap.ui.commons"
	xmlns:sap.ui.unified="sap.ui.unified" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

	<sap.ui.commons.layout:MatrixLayout
		layoutFixed="true" width="100%">
		<sap.ui.commons.layout:rows>


			<sap.ui.commons.layout:MatrixLayoutRow>
				<sap.ui.commons.layout:cells>
					<sap.ui.commons.layout:MatrixLayoutCell
						hAlign="Begin">
						<sap.ui.commons.layout:content>
							<sap.ui.commons:TextView text="{i18n>LicenseInfo}"
								design="H1"></sap.ui.commons:TextView>
							<sap.ui.commons:HorizontalDivider></sap.ui.commons:HorizontalDivider>
						</sap.ui.commons.layout:content>
					</sap.ui.commons.layout:MatrixLayoutCell>


				</sap.ui.commons.layout:cells>
			</sap.ui.commons.layout:MatrixLayoutRow>
		</sap.ui.commons.layout:rows>
	</sap.ui.commons.layout:MatrixLayout>


	<VBox alignItems="Center">
		<!-- Child license activity Q start -->

		<sap.ui.commons.layout:MatrixLayout
			layoutFixed="true" columns="2" widths="35%,50%" id="idPreviewLicenseInfoMAtrixLayout">



			<sap.ui.commons.layout:MatrixLayoutRow>
				<sap.ui.commons.layout:MatrixLayoutCell
					hAlign="End">

					<sap.ui.commons:TextView text="{i18n>BusinessType}" class="paddingRight"></sap.ui.commons:TextView>
				

				</sap.ui.commons.layout:MatrixLayoutCell>
				<!-- <sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutCell> -->
				
				<sap.ui.commons.layout:MatrixLayoutCell>
					<sap.ui.commons:TextView id="idPLILIBusinessType"
						></sap.ui.commons:TextView>

				</sap.ui.commons.layout:MatrixLayoutCell>
			</sap.ui.commons.layout:MatrixLayoutRow>
			
			<sap.ui.commons.layout:MatrixLayoutRow>
				<sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutCell>
				<!-- <sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutCell> -->
				<sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutCell>
			</sap.ui.commons.layout:MatrixLayoutRow>
			
			<sap.ui.commons.layout:MatrixLayoutRow>
				<sap.ui.commons.layout:MatrixLayoutCell hAlign="End">

					<sap.ui.commons:TextView text="{i18n>LicenseType}" class="paddingRight"></sap.ui.commons:TextView>

				</sap.ui.commons.layout:MatrixLayoutCell>
				<!-- <sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutCell> -->
				<sap.ui.commons.layout:MatrixLayoutCell>
					<sap.ui.commons:TextView id="idPLILILicenseTypeTextView"
						></sap.ui.commons:TextView>

				</sap.ui.commons.layout:MatrixLayoutCell>
			</sap.ui.commons.layout:MatrixLayoutRow>
			
			<sap.ui.commons.layout:MatrixLayoutRow>
				<sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutCell>
				<!-- <sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutCell> -->
				<sap.ui.commons.layout:MatrixLayoutCell>
				</sap.ui.commons.layout:MatrixLayoutCell>
			</sap.ui.commons.layout:MatrixLayoutRow>
		</sap.ui.commons.layout:MatrixLayout>

		<VBox id="idLicenceInfoPreviewContentVBox" alignItems="Center">

			<sap.ui.commons.layout:MatrixLayout
				layoutFixed="true" width="100%">

			</sap.ui.commons.layout:MatrixLayout>

			<Table width="100%" id="idLILIPreviewProductsTable">
				<columns>

					<Column width="5%">
						<sap.ui.commons:TextView text="{i18n>ProductCode}"
							class="textcolorwhite"></sap.ui.commons:TextView>
					</Column>
					<Column width="10%">

						<sap.ui.commons:TextView text="{i18n>ProductName}"
							class="textcolorwhite"></sap.ui.commons:TextView>
					</Column>
					<Column width="5%">
						<sap.ui.commons:TextView text="{i18n>Quantity}"
							class="textcolorwhite"></sap.ui.commons:TextView>
					</Column>
					<Column width="5%">
						<sap.ui.commons:TextView text="{i18n>UnitOfMeasurement}"
							class="textcolorwhite"></sap.ui.commons:TextView>
					</Column>
				</columns>
			</Table>


		</VBox>

	</VBox>
</sap.ui.core:FragmentDefinition>