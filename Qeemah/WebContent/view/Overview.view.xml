<mvc:View height="100%" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.commons.layout" xmlns="sap.m" xmlns:c="sap.ui.commons"
	controllerName="com.sagia.view.Overview" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="idPage" enableScrolling="true" showHeader="false"><!-- backgroundDesign="Transparent" -->
		<Toolbar class="headertoolbarbgcolor">
			<ToolbarSpacer />
			<SearchField width="15em" />
			<Link class="textwhitecolor" text="English" press="handleLinkPress" />
			<Link class="textwhitecolor" text="العربية" press="handleLinkPress" />
		</Toolbar>
		<VBox alignItems="Center" justifyContent="Center">
			<VBox alignItems="Center">
				<core:HTML content="{i18n>home_carousel_embed}" id="idImageCarousel">
				</core:HTML>
			</VBox>
			<VBox alignItems="Center" justifyContent="Center">
				<IconTabBar enableScrolling="true" width="100%"
					select="handleIconTabBarItemSelect" expandable="false">
					<items>
						<IconTabFilter key="1" id="idWhySaudiArabiaTab"
							text="{i18n>WhySaudiArabia}">
							<core:HTML content="{i18n>wsap1}">
							</core:HTML>
							<core:HTML content="{i18n>wsap2}">
							</core:HTML>
							<core:HTML content="{i18n>wsap3}">
							</core:HTML>
							<core:HTML content="{i18n>wsap4h}">
							</core:HTML>
							<core:HTML content="{i18n>wsap4p1}">
							</core:HTML>
							<core:HTML content="{i18n>wsap4p1}">
							</core:HTML>
						</IconTabFilter>
						<IconTabFilter key="2" text="{i18n>InvestmentClimate}">
							<core:HTML content="{i18n>investmentclimateembed}">
							</core:HTML>
						</IconTabFilter>
						<IconTabFilter key="3" id="idOnlineServicesTab"
							text="{i18n>OnlineServices}">
							<core:HTML content="{i18n>onlineservicesembed}">
							</core:HTML>
						</IconTabFilter>
						<IconTabFilter key="4" id="idInvestmentGuidelineTab"
							text="{i18n>InvestmentGuideline}">
							<core:HTML content="{i18n>InvestmentGuidelinesMatter}">
							</core:HTML>
						</IconTabFilter>
						<IconTabFilter key="5" id="idNewsTab" text="{i18n>News}">
							<core:HTML content="{i18n>newsembed}">
							</core:HTML>
						</IconTabFilter>
						<IconTabFilter key="6" id="idFAQTab" text="{i18n>FAQ}">
							<core:HTML content="{i18n>faqembed}">
							</core:HTML>
						</IconTabFilter>
						<IconTabFilter key="7" text="{i18n>SignIn}">
							<core:Fragment fragmentName="com.sagia.view.fragments.signin"
								type="XML" />

						</IconTabFilter>
						<IconTabFilter key="8" text="{i18n>RegisterOrganization}">
							<VBox alignItems="Center" justifyContent="Center">
								<core:HTML content="{i18n>linebreak}">
								</core:HTML>
								<!-- Register User Start -->
								<core:Fragment fragmentName="com.sagia.view.fragments.user_registration"
								type="XML" />
								
								<VBox id="idHBoxRegistrationSuccessMessage" visible="false"
									alignItems="Center" justifyContent="Center">
									<layout:MatrixLayout layoutFixed="false">
										<layout:MatrixLayoutRow>
											<layout:MatrixLayoutCell>
												<core:HTML content="{i18n>SuccessImg}">
												</core:HTML>
											</layout:MatrixLayoutCell>
											<layout:MatrixLayoutCell>
												<core:HTML content="{i18n>RegistrationSuccessMsg}">
												</core:HTML>
											</layout:MatrixLayoutCell>
										</layout:MatrixLayoutRow>
									</layout:MatrixLayout>
									<Button type="Emphasized" text="{i18n>ProceedtoOrganizationRegistration}"
										press="handleProceedToOrgRegButtonPress">
									</Button>
								</VBox>
								<VBox id="idVBoxOrgReg" visible="false">
									<VBox justifyContent="Center" alignItems="Center">
										<ProgressIndicator width="60em"
											percentValue="30" displayValue="30% Completed" showValue="true" state="None" />
									</VBox>

									<!-- Registration process icontabbar Start -->
									<IconTabBar id="idIconTabBar" enableScrolling="true"
										expandable="false">
										<items>
											<IconTabFilter icon="sap-icon://form"
												iconColor="Positive" design="Horizontal" text="{i18n>BasicInfo}"
												key="Heavy">
												<core:Fragment fragmentName="com.sagia.view.fragments.basicinfo"
								type="XML" />
												
											</IconTabFilter>
											<IconTabSeparator icon="sap-icon://open-command-field" />
											<IconTabFilter icon="sap-icon://badge"
												iconColor="Positive" key="bbb" design="Horizontal" text="{i18n>LicenseInfo}">
												<core:Fragment fragmentName="com.sagia.view.fragments.licenseinfo"
								type="XML" />
												
											</IconTabFilter>
											<IconTabSeparator icon="sap-icon://open-command-field" />
											<IconTabFilter icon="sap-icon://citizen-connect"
												iconColor="Positive" design="Horizontal" text="{i18n>Shareholder}"
												key="Overweight">
												<!-- existing share holder start -->

												<core:Fragment
													fragmentName="com.sagia.view.fragments.shareholders_tabstrip"
													type="XML" />

												<!-- existing share holder end -->

												<!-- share holders sub tabs start -->

												<!-- new share holder start -->
												<!-- new share holder end -->
												<!-- share holders sub tabs end -->
											</IconTabFilter>
											<IconTabSeparator icon="sap-icon://open-command-field" />
											<IconTabFilter icon="sap-icon://personnel-view"
												iconColor="Positive" design="Horizontal" text="{i18n>Preview}"
												key="Overweight"></IconTabFilter>
											<IconTabSeparator icon="sap-icon://open-command-field" />
											<IconTabFilter icon="sap-icon://activity-items"
												iconColor="Positive" design="Horizontal" text="{i18n>TermsnCond}"
												key="Overweight"></IconTabFilter>
											<IconTabSeparator icon="sap-icon://open-command-field" />
											<IconTabFilter icon="sap-icon://accept"
												iconColor="Positive" design="Horizontal" text="{i18n>Submit}"
												key="Overweight"></IconTabFilter>
										</items>
									</IconTabBar>
									<!-- Registration process IcontabBar end -->
								</VBox>
								<!-- Register User End -->
							</VBox>
						</IconTabFilter>
						<IconTabFilter key="9" id="idSuccessStoriesTab"
							text="{i18n>SuccessStories}">
						</IconTabFilter>
						<IconTabFilter key="10" id="idContactUsTab" text="{i18n>ContactUs}">
						</IconTabFilter>
					</items>
				</IconTabBar>
			</VBox>
		</VBox>
		<footer>
			<Toolbar class="headertoolbarbgcolor">
				<ToolbarSpacer />
				<core:HTML content="{i18n>copyright}">
				</core:HTML>
				<ToolbarSpacer />
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
