<mvc:View height="100%" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.commons.layout" xmlns="sap.m" xmlns:c="sap.ui.commons"
	controllerName="com.sagia.view.Overview">
	<Page enableScrolling="true" showHeader="false"><!-- backgroundDesign="Transparent" -->
		<Toolbar class="headertoolbarbgcolor">

			<ToolbarSpacer />
			<SearchField width="15em" />
			<Link class="textwhitecolor" text="English" press="handleLinkPress" />
			<Link class="textwhitecolor" text="العربية" press="handleLinkPress" />

		</Toolbar>


		<!-- <HBox class="headertoolbarbgcolor">displayInline="true"<Image src="common/mime/logo.JPG" 
			></Image> </HBox> -->
		<VBox justifyContent="Center" width="100%" displayInline="true">
		<layout:MatrixLayout layoutFixed="false" width="100%">
			<layout:MatrixLayoutRow >
				<layout:MatrixLayoutCell hAlign="Center"
					vAlign="Middle" width="14em">
					<VBox fitContainer="true" class="background2" justifyContent="SpaceBetween">
						<Button text="{i18n>WhySaudiArabia}" press="onPress" width="14em"/>
						<Button text="{i18n>RegisterOrganization}" press="onPress" width="14em"/>
						<Button text="{i18n>SuccessStories}" press="onPress" width="14em"/>
						<Button text="{i18n>ContactUs}" press="onPress" width="14em"/>
					</VBox>
				</layout:MatrixLayoutCell>
				<layout:MatrixLayoutCell hAlign="Left"
					vAlign="Top">
					<IconTabBar >
						<items>
							<IconTabFilter text="{i18n>WhySaudiArabia}">
							</IconTabFilter>
							<IconTabFilter text="{i18n>RegisterOrganization}">
							</IconTabFilter>
							<IconTabFilter text="{i18n>SuccessStories}">
							</IconTabFilter>
							<IconTabFilter text="{i18n>ContactUs}">
							</IconTabFilter>
						</items>
					</IconTabBar>
				</layout:MatrixLayoutCell>
			</layout:MatrixLayoutRow>
		</layout:MatrixLayout>
</VBox>

		<!-- <c:ApplicationHeader logoSrc="common/mime/logo-en.png" displayLogoff="false" 
			displayWelcome="false"></c:ApplicationHeader> -->

	</Page>
</mvc:View>
