<mvc:View height="100%" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.commons.layout" xmlns="sap.m" xmlns:c="sap.ui.commons"
	controllerName="com.sagia.view.Overview">
	<Page enableScrolling="true" showHeader="false"><!-- backgroundDesign="Transparent" -->
		<Toolbar class="headertoolbarbgcolor">

			<ToolbarSpacer />
			<SearchField width="15em" />
			<Link class="textwhitecolor" text="English" press="handleLinkPress" />
			<Link class="textwhitecolor" text="العربية" press="handleLinkPress" />

		</Toolbar>


		<!-- <HBox class="headertoolbarbgcolor"> <core:HTML content='&lt;div class="carousel" 
			data-transition="slide"&gt; &lt;div&gt; &lt;img src="common/mime/slide1.jpg"/&gt; 
			&lt;div&gt; &lt;img src="common/mime/slide2.jpg"/&gt; &lt;/div&gt; &lt;/div&gt;' 
			preferDOM="false"> </core:HTML> -->

		<Carousel id="idImageCarousel" loop="true" animationDuration="0">
			<pages>
				<Image src="common/mime/slide1.jpg"></Image>
				<Image src="common/mime/slide2.jpg"></Image>
				<Image src="common/mime/slide3.jpg"></Image>
				<Image src="common/mime/slide4.jpg"></Image>
				<Image src="common/mime/slide5.jpg"></Image>
				<Image src="common/mime/slide6.jpg"></Image>
				<Image src="common/mime/slide7.jpg"></Image>
			</pages>
		</Carousel>


		<!-- </HBox> --><!-- displayInline="true" -->

		<IconTabBar enableScrolling="true" width="100%"
			select="handleIconTabBarItemSelect">
			<items>
				<IconTabFilter key="1" id="idWhySaudiArabiaTab" text="{i18n>WhySaudiArabia}">
					<core:HTML content="{i18n>wsap1}">
					</core:HTML>
					<core:HTML content="{i18n>wsap2}">
					</core:HTML>
					<core:HTML content="{i18n>wsap3}">
					</core:HTML>
					<core:HTML content="{i18n>wsap4h}">
					</core:HTML>
					<core:HTML content="{i18n>wsap4p1}">
					</core:HTML>
					<core:HTML content="{i18n>wsap4p1}">
					</core:HTML>

				</IconTabFilter>

				<IconTabFilter key="2" text="{i18n>InvestmentClimate}">
					<core:HTML content="{i18n>investmentclimateembed}">
					</core:HTML>
				</IconTabFilter>
				<IconTabFilter key="3" id="idOnlineServicesTab" text="{i18n>OnlineServices}">
					<core:HTML content="{i18n>onlineservicesembed}">
					</core:HTML>
				</IconTabFilter>
				<IconTabFilter key="4" id="idInvestmentGuidelineTab"
					text="{i18n>InvestmentGuideline}">
					<core:HTML content="{i18n>InvestmentGuidelinesMatter}">
					</core:HTML>
				</IconTabFilter>

				<IconTabFilter key="5" id="idNewsTab" text="{i18n>News}">
					<core:HTML content="{i18n>newsembed}">
					</core:HTML>
				</IconTabFilter>
				<IconTabFilter key="6" id="idFAQTab" text="{i18n>FAQ}">
					<core:HTML content="{i18n>faqembed}">
					</core:HTML>
				</IconTabFilter>
				<IconTabFilter key="7" text="{i18n>SignIn}">
					<VBox id="idVBoxSignIn" alignItems="Center" justifyContent="Center">
						<core:HTML content="{i18n>linebreak}">
						</core:HTML>
						<Input type="Text" placeholder="{i18n>EnterInvestorID}" />
						<Input type="Password" placeholder="{i18n>EnterPassword}" />
						<CheckBox text="{i18n>RememberMe}" />
						<HBox justifyContent="Center">
							<layout:MatrixLayout id="idMatrixLayout"
								layoutFixed="false">
								<layout:MatrixLayoutRow>
									<layout:MatrixLayoutCell>
										<Button type="Accept" text="{i18n>Ok}" press="handleOkButtonPress">
										</Button>
									</layout:MatrixLayoutCell>
									<layout:MatrixLayoutCell>
										<Button type="Reject" text="{i18n>Cancel}" press="onPress">
										</Button>
									</layout:MatrixLayoutCell>
								</layout:MatrixLayoutRow>
							</layout:MatrixLayout>
						</HBox>
						<HBox justifyContent="Center" alignItems="Center">
							<layout:MatrixLayout layoutFixed="false">
								<layout:MatrixLayoutRow>
									<layout:MatrixLayoutCell>
										<Link text="{i18n>ForgotPassword}" press="handleLinkPress" />
									</layout:MatrixLayoutCell>
									<layout:MatrixLayoutCell>
										<Link text="{i18n>ResetPassword}" press="handleLinkPress" />
									</layout:MatrixLayoutCell>
								</layout:MatrixLayoutRow>
							</layout:MatrixLayout>
						</HBox>
					</VBox>
				</IconTabFilter>
				<IconTabFilter key="8" text="{i18n>RegisterOrganization}">
					<core:HTML content="{i18n>linebreak}">
					</core:HTML>
					<!-- Register User Start -->
					<VBox id="idVBoxRegistration" justifyContent="Center"
						alignItems="Center">
						<items>
							<layout:MatrixLayout layoutFixed="false">
								<layout:MatrixLayoutRow>
									<layout:MatrixLayoutCell>
										<core:HTML content="{i18n>RegistrationFormHeading}">
										</core:HTML>
									</layout:MatrixLayoutCell>
								</layout:MatrixLayoutRow>
								<layout:MatrixLayoutRow>
									<layout:MatrixLayoutCell>
										<Input type="Text" placeholder="{i18n>EnterFirstName}" />
										<Input type="Text" placeholder="{i18n>EnterLastName}" />
									</layout:MatrixLayoutCell>
								</layout:MatrixLayoutRow>

								<layout:MatrixLayoutRow>
									<layout:MatrixLayoutCell>
										<Input type="Tel" placeholder="{i18n>EnterMobileNumber}" />
									</layout:MatrixLayoutCell>
								</layout:MatrixLayoutRow>

								<layout:MatrixLayoutRow>
									<layout:MatrixLayoutCell>
										<Input type="Email" placeholder="{i18n>EnterEmail}" />
										<Input type="Password" placeholder="{i18n>EnterPassword}" />
										<Input type="Password" placeholder="{i18n>ReEnterPassword}" />
									</layout:MatrixLayoutCell>
								</layout:MatrixLayoutRow>
							</layout:MatrixLayout>
							<HBox justifyContent="Center">
								<layout:MatrixLayout layoutFixed="false">
									<layout:MatrixLayoutRow>
										<layout:MatrixLayoutCell>
											<Button type="Accept" text="{i18n>Register}"
												press="handleRegisterOrgButtonPress">
											</Button>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell>
											<Button type="Reject" text="{i18n>Cancel}" press="onPress">
											</Button>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell>
										</layout:MatrixLayoutCell>
									</layout:MatrixLayoutRow>
								</layout:MatrixLayout>
							</HBox>
						</items>
					</VBox>

					<VBox id="idHBoxRegistrationSuccessMessage" visible="false"
						alignItems="Center" justifyContent="Center">

						<layout:MatrixLayout layoutFixed="false">
							<layout:MatrixLayoutRow>
								<layout:MatrixLayoutCell>
									<core:HTML content="{i18n>SuccessImg}">
									</core:HTML>
								</layout:MatrixLayoutCell>
								<layout:MatrixLayoutCell>
									<core:HTML content="{i18n>RegistrationSuccessMsg}">
									</core:HTML>
								</layout:MatrixLayoutCell>
							</layout:MatrixLayoutRow>
						</layout:MatrixLayout>

						<Button type="Emphasized" text="{i18n>ProceedtoOrganizationRegistration}"
							press="handleProceedToOrgRegButtonPress">
						</Button>


					</VBox>


					<VBox alignItems="Center" justifyContent="Center">


						<layout:MatrixLayout layoutFixed="false"
							columns="4" widths="13em,25em,10em,25em">
							<layout:rows>
								<layout:MatrixLayoutRow>
									<layout:cells>
										<layout:MatrixLayoutCell colSpan="2">
											<layout:content>
												<Input type="Text" placeholder="{i18n>OrganizationName}" />
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell vAlign="Middle"
											hAlign="End">
											<layout:content>
												<c:TextView text="{i18n>Country}" design="H6" />
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell>
											<layout:content>
												<ComboBox width="25em">
													<core:Item />
												</ComboBox>
											</layout:content>
										</layout:MatrixLayoutCell>
									</layout:cells>
								</layout:MatrixLayoutRow>
							</layout:rows>

							<layout:rows>
								<layout:MatrixLayoutRow>
									<layout:cells>
										<layout:MatrixLayoutCell vAlign="Middle"
											hAlign="End">
											<layout:content>
												<c:TextView text="{i18n>LegalStatus}" design="H6" />
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell>
											<layout:content>
												<ComboBox width="25em">
													<core:Item />
												</ComboBox>
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell vAlign="Middle"
											hAlign="End">
											<layout:content>
												<c:TextView text="{i18n>Region}" design="H6" />
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell>
											<layout:content>
												<ComboBox width="25em">
													<core:Item />
												</ComboBox>
											</layout:content>
										</layout:MatrixLayoutCell>
									</layout:cells>
								</layout:MatrixLayoutRow>
							</layout:rows>

							<layout:rows>
								<layout:MatrixLayoutRow>
									<layout:cells>
										<layout:MatrixLayoutCell vAlign="Middle"
											hAlign="End">
											<layout:content>
												<c:TextView text="{i18n>MultinationalCompany}"
													design="H6" />
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell>
											<layout:content>
												<ComboBox width="25em">
													<core:Item />
												</ComboBox>
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell vAlign="Middle"
											hAlign="End">
											<layout:content>
												<c:TextView text="{i18n>City}" design="H6" />
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell>
											<layout:content>
												<ComboBox width="25em">
													<core:Item />
												</ComboBox>
											</layout:content>
										</layout:MatrixLayoutCell>
									</layout:cells>
								</layout:MatrixLayoutRow>
							</layout:rows>

							<layout:rows>
								<layout:MatrixLayoutRow>
									<layout:cells>
										<layout:MatrixLayoutCell colSpan="2">
											<layout:content>
												<Input type="Text" placeholder="{i18n>LaborSize}" />
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell vAlign="Middle"
											hAlign="End">
											<layout:content>
												<c:TextView text="{i18n>POBox}" design="H6" />
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell>
											<layout:content>
												<ComboBox width="25em">
													<core:Item />
												</ComboBox>
											</layout:content>
										</layout:MatrixLayoutCell>
									</layout:cells>
								</layout:MatrixLayoutRow>
							</layout:rows>

							<layout:rows>
								<layout:MatrixLayoutRow>
									<layout:cells>
										<layout:MatrixLayoutCell colSpan="2">
											<layout:content>
												<Input type="Text" placeholder="{i18n>Capital}" />
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell vAlign="Middle"
											hAlign="End">
											<layout:content>
												<c:TextView text="{i18n>PostalCode}" design="H6" />
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell>
											<layout:content>
												<ComboBox width="25em">
													<core:Item />
												</ComboBox>
											</layout:content>
										</layout:MatrixLayoutCell>
									</layout:cells>
								</layout:MatrixLayoutRow>
							</layout:rows>

							<layout:rows>
								<layout:MatrixLayoutRow>
									<layout:cells>
										<layout:MatrixLayoutCell vAlign="Middle"
											hAlign="End">
											<layout:content>
												<c:TextView text="{i18n>Telephone}" design="H6" />
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell>
											<HBox justifyContent="Start" alignItems="Center">
												<Input type="Number" placeholder="{i18n>CountryCode}"
													enabled="false" />
												<Input type="Number" placeholder="{i18n>Telephone}" />
												<Input type="Number" placeholder="{i18n>Extension}" />
											</HBox>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell vAlign="Middle"
											hAlign="End" colSpan="2">
											<layout:content>
												<Input type="Text" placeholder="{i18n>Street}" />
											</layout:content>
										</layout:MatrixLayoutCell>
										
									</layout:cells>
								</layout:MatrixLayoutRow>
							</layout:rows>
							
							<layout:rows>
								<layout:MatrixLayoutRow>
									<layout:cells>
										<layout:MatrixLayoutCell vAlign="Middle"
											hAlign="End">
											<layout:content>
												<c:TextView text="{i18n>Telephone}" design="H6" />
											</layout:content>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell>
											<HBox justifyContent="Start" alignItems="Center">
												<Input type="Number" placeholder="{i18n>CountryCode}"
													enabled="false" />
												<Input type="Number" placeholder="{i18n>MobilePhone}" />
											</HBox>
										</layout:MatrixLayoutCell>
										<layout:MatrixLayoutCell vAlign="Middle"
											hAlign="End" colSpan="2">
											<layout:content>
												<Input type="Text" placeholder="{i18n>BuildingNo}" />
											</layout:content>
										</layout:MatrixLayoutCell>
										
									</layout:cells>
								</layout:MatrixLayoutRow>
							</layout:rows>


						</layout:MatrixLayout>
					</VBox>
					<!-- Register User End -->
				</IconTabFilter>
				<IconTabFilter key="9" id="idSuccessStoriesTab" text="{i18n>SuccessStories}">
				</IconTabFilter>
				<IconTabFilter key="10" id="idContactUsTab" text="{i18n>ContactUs}">
				</IconTabFilter>
			</items>
		</IconTabBar>

		<footer>
			<Toolbar class="headertoolbarbgcolor">
				<ToolbarSpacer />

				<core:HTML content="{i18n>copyright}">
				</core:HTML>
				<ToolbarSpacer />


			</Toolbar>
		</footer>

	</Page>
</mvc:View>
