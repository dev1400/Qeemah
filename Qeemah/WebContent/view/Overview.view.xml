<mvc:View height="100%" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.commons.layout" xmlns="sap.m" xmlns:c="sap.ui.commons" controllerName="com.sagia.view.Overview">
	<IconTabBar class="iconTabBarPaddingTop" id="idIconTabBarNoIcons"
		expanded="{device>/isNoPhone}">
		<items>
			
			<IconTabFilter text="Sign in">
				<VBox id="idVBoxSignIn" alignItems="Center" justifyContent="Center">
				    <Input type="Text" placeholder="{i18n>EnterInvestorID}" />
					<Input type="Password" placeholder="{i18n>EnterPassword}" />
					<HBox justifyContent="Center">
						<layout:MatrixLayout id="idMatrixLayout"
							layoutFixed="false">
							<layout:MatrixLayoutRow>
								<layout:MatrixLayoutCell>
									<Button type="Accept" text="{i18n>Ok}" press="handleOkButtonPress">
									</Button>
								</layout:MatrixLayoutCell>
								<layout:MatrixLayoutCell>
									<Button type="Reject" text="{i18n>Cancel}" press="onPress">
									</Button>
								</layout:MatrixLayoutCell>
								

							</layout:MatrixLayoutRow>
						</layout:MatrixLayout>
					</HBox>


				
				<HBox justifyContent="Center" alignItems="Center">
				         <layout:MatrixLayout 
							layoutFixed="false">
							<layout:MatrixLayoutRow>
								<layout:MatrixLayoutCell>
									<Link text="{i18n>ForgotPassword}" press="handleLinkPress" />									
								</layout:MatrixLayoutCell>
								<layout:MatrixLayoutCell>
									<Link text="{i18n>ResetPassword}" press="handleLinkPress" />									
								</layout:MatrixLayoutCell>
							</layout:MatrixLayoutRow>
						</layout:MatrixLayout>					
				</HBox>
				</VBox>
				<VBox id="idVBoxUserInformation" visible="false">
				<form:SimpleForm
		id="form"
		minWidth="1024"
		maxContainerCols="2" >
		
		<Label text="Name"/>
		<Text text="Abdul Waheed"/>
		<Label text="Street"/>
		<Text text="Imam Saud"/>
		<Label text="City"/>
		<Text text="Riyadh"/>
		<Label text="Country"/>
		<Text text="Saudi Ariabia"/>
	</form:SimpleForm>
				</VBox>
			</IconTabFilter>
			<IconTabFilter text="Register Organization">
				<VBox class="marginBoxContent">
					<items>
						<Input type="Text" placeholder="{i18n>EnterFirstName}" />

						<Input type="Text" placeholder="{i18n>EnterLastName}" />

						<Input type="Tel" placeholder="{i18n>EnterMobileNumber}" />

						<Input type="Email" placeholder="{i18n>EnterEmail}" />

						<Input type="Password" placeholder="{i18n>EnterPassword}" />

						<Input type="Password" placeholder="{i18n>ReEnterPassword}" />

						<HBox justifyContent="Center">
							<layout:MatrixLayout layoutFixed="false">
								<layout:MatrixLayoutRow>
									<layout:MatrixLayoutCell>
										<Button type="Accept" text="{i18n>Register}" press="handleRegisterOrgButtonPress">
										</Button>
									</layout:MatrixLayoutCell>
									<layout:MatrixLayoutCell>
										<Button type="Reject" text="{i18n>Cancel}" press="onPress">
										</Button>
									</layout:MatrixLayoutCell>

								</layout:MatrixLayoutRow>
							</layout:MatrixLayout>
						</HBox>

					</items>
				</VBox>
			</IconTabFilter>
			<!-- <IconTabFilter text="Success Stories">
				<Text text="People content goes here ..." />
			</IconTabFilter> -->
		</items>
	</IconTabBar>

</mvc:View>
